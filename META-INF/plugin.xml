<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>
    <name>IvyIDEA</name>
    <description>Resolves module dependencies through Ivy</description>
    <version>0.1</version>
    <vendor>Clarent</vendor>
    <idea-version since-build="3000"/>
    <application-components>
        <component>
            <implementation-class>org.clarent.ivyidea.IvyIdeaPlugin</implementation-class>
        </component>
    </application-components>
    <project-components>
        <component>
            <implementation-class>org.clarent.ivyidea.intellij.ui.IvyIdeaProjectSettingsComponent</implementation-class>
        </component>
        <component>
            <implementation-class>org.clarent.ivyidea.intellij.ToolWindowRegistrationComponent</implementation-class>
        </component>
    </project-components>
    <actions>
        <action id="IvyIDEA.UpdateSingleModuleDependencies"
                class="org.clarent.ivyidea.UpdateSingleModuleDependenciesAction" text="Ivy Resolve (active module)"
                description="Resolve dependencies for the active module">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
        <action id="IvyIDEA.UpdateAllDependencies"
                class="org.clarent.ivyidea.UpdateAllModuleDependenciesAction"
                text="Ivy Resolve (all modules)" description="Resolve dependencies for all modules">
            <add-to-group group-id="ToolsMenu" relative-to-action="IvyIDEA.UpdateSingleModuleDependencies"
                          anchor="after"/>
        </action>
    </actions>

</idea-plugin>